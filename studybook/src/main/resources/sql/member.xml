<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Members"> 


	<insert id="insert" parameterType="member">
		<selectKey resultType="int" order="BEFORE" keyProperty="key">
			select nvl(max(key),1)+1 from member
		</selectKey>
        insert into member (name, email, password, phone, key, profile)
        values (#{name}, #{email}, #{password}, #{phone}, #{key}, default)
    </insert>
    
     
	<select id="usercheck" resultType="member" parameterType="String">
		select *
		from member where email = #{email}
	</select>
	
	
	<update id="updatePw" parameterType="member">
		update member set
		password = #{password}
		where key = #{key}
	</update>
	 
	
	<update id="updatePhone" parameterType="member">
		update member set
		phone = #{phone}
		where key = #{key}
	</update>
	
	
	<update id="updateProfile" parameterType="member">
		update member set
		profile = #{profile}
		where key = #{key}
	</update>
	
	
	<delete id="delete" parameterType="int">
		delete from member 
		where key = #{key}
	</delete>
	
	
	<select id="myInfo" parameterType="int" resultType="member">
		select * from member where key=#{mem_key}
	</select>
	
	
</mapper>